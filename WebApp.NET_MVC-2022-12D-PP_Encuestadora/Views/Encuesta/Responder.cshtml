@model WebApp.NET_MVC_2022_12D_PP_Encuestadora.Models.Encuesta

@{
    ViewData["Title"] = "Responder";
}

<h1>@Html.DisplayFor(model => model.tituloEncuesta)</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.datetimeCreacionEncuesta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.datetimeCreacionEncuesta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.datetimeVencimientoEncuesta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.datetimeVencimientoEncuesta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.puntosEncuesta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.puntosEncuesta)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.nombreCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.preguntas)
        </dt>*@
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th class="col-sm-3">Preguntas</th>
                    <th class="col-sm-6">Opciones</th>
                </tr>
                @foreach (var item in Model.preguntas)
                {
                    <tr>
                        <td class="col-sm-3">
                            @Html.DisplayFor(modelItem => item.tituloPregunta)
                        </td>
                        <td class="col-sm-6">
                            @foreach (var item2 in item.opciones)
                            {
                                @Html.DisplayFor(modelItem => item2.tituloOpcion)
                                <a href=""> Seleccionar </a>
                                <br />
                            }
                        </td>
                    </tr>
                 }
            </table>
        </dd>
    </dl>
</div>

