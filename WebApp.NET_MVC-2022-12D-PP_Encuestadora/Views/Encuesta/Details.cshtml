@model WebApp.NET_MVC_2022_12D_PP_Encuestadora.Models.Encuesta

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.tituloEncuesta)</h1>
@*<p>Comentario1: Deberia filtrar las preguntas y las opciones de la encuesta <b>REALIZADO</b></p>*@

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.datetimeCreacionEncuesta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.datetimeCreacionEncuesta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.datetimeVencimientoEncuesta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.datetimeVencimientoEncuesta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.puntosEncuesta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.puntosEncuesta)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.nombreCliente)
        </dd>
        <dt>
           
        </dt>*@
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th class="col-sm-3">Preguntas | <a href="/Pregunta/Create?EncuestaId=@Model.EncuestaId">Crear Pregunta</a></th>
                    <th class="col-sm-6">Opciones</th>
                </tr>
                @foreach (var item in Model.preguntas)
                {
                    <tr>
                        <td class="col-sm-3">
                            @Html.DisplayFor(modelItem => item.tituloPregunta) | 
                            <a href="/OpcionPregunta/Create?PreguntaId=@item.PreguntaId">Crear Opcion</a>
                        </td>
                        <td class="col-sm-6">
                            @foreach (var item2 in item.opciones)
                            {
                                @Html.DisplayFor(modelItem => item2.tituloOpcion)
                                <a href="/OpcionPregunta/Edit?id=@item2.OpcionPreguntaId&PreguntaId=@item.PreguntaId"> Editar | </a>
                                <a href="/OpcionPregunta/Delete/@item2.OpcionPreguntaId"> Borrar </a>
                                <br />
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>

                            <a href="/Pregunta/Edit?id=@item.PreguntaId&EncuestaId=@Model.EncuestaId">Editar</a> |
                            <a href="/Pregunta/Delete/@item.PreguntaId">Borrar</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.EncuestaId">Editar</a> |*@
    <a href="/Encuesta/Edit?id=@Model.EncuestaId&ClienteId=@Model.ClienteId">Editar</a> |
    <a asp-action="Delete" asp-route-id="@Model.EncuestaId">Borrar</a> |
    <a href="/Cliente/Details/@Model.ClienteId">Volver al Cliente</a>
</div>
