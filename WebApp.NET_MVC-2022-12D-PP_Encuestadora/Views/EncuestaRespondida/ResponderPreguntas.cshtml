@model WebApp.NET_MVC_2022_12D_PP_Encuestadora.Models.EncuestaRespondida

@{
    ViewData["Title"] = "ResponderPreguntas";
}

<h1>Responder Pregunta</h1>
@*<p>Comentario1: Deberia recibir por parametro los id de Encuesta, Pregunta, Opcion y Usuario <b>REALIZADO</b></p>*@
@*<h4>Responder Pregunta</h4>*@
<hr />
<div class="row">
    <div class="col-md-10">
        @if (ViewBag.esEncuestaRespondida)
        {
            <script>alert("La encuesta fue respondida");</script>
            <a href="/Encuesta/Disponibles?UsuarioId=@ViewBag.UsuarioId">Ver Encuestas disponibles</a>
        }
        else
        {

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="datetimeRespuestaEncuesta" class="control-label"></label>
                    <b>@Html.DisplayFor(model => model.datetimeRespuestaEncuesta)</b>
                    <input type="hidden" asp-for="datetimeRespuestaEncuesta" class="form-control" />
                    <span asp-validation-for="datetimeRespuestaEncuesta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="encuesta" class="control-label"></label>
                    @*<b>@Model.encuesta</b>*@
                    <b>@Html.DisplayFor(model => model.encuesta.tituloEncuesta)</b>
                    <input type="hidden" asp-for="encuesta" class="form-control" value="@Model.encuesta" />
                    @*<select asp-for="EncuestaId" class="form-control" asp-items="ViewBag.encuesta.EncuestaId"></select>*@
                    <span asp-validation-for="encuesta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EncuestaId" class="control-label"></label>
                    @*<b>@Model.EncuestaId</b>*@
                    <b>@Html.DisplayFor(model => model.EncuestaId)</b>
                    <input type="hidden" asp-for="EncuestaId" class="form-control" value="@Model.EncuestaId" />
                    @*<select asp-for="EncuestaId" class="form-control" asp-items="ViewBag.encuesta.EncuestaId"></select>*@
                    <span asp-validation-for="EncuestaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="pregunta" class="control-label"></label>
                    @*<b>@Model.pregunta</b>*@
                    <b>@Html.DisplayFor(model => model.pregunta.tituloPregunta)</b>
                    <input type="hidden" asp-for="pregunta" class="form-control" value="@Model.pregunta" />
                    @*<select asp-for="PreguntaId" class="form-control" asp-items="ViewBag.preguntas"></select>*@
                    <span asp-validation-for="pregunta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PreguntaId" class="control-label"></label>
                    @*<b>@Model.PreguntaId</b>*@
                    <b>@Html.DisplayFor(model => model.PreguntaId)</b>
                    <input type="hidden" asp-for="PreguntaId" class="form-control" value="@Model.PreguntaId" />
                    @*<select asp-for="PreguntaId" class="form-control" asp-items="ViewBag.preguntas"></select>*@
                    <span asp-validation-for="PreguntaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OpcionPreguntaId" class="control-label"></label>
                    <select asp-for="OpcionPreguntaId" class="form-control" asp-items="@ViewBag.OpcionPreguntaId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Usuario" class="control-label"></label>
                    @*<b>@Model.Usuario.nombreUsuario</b>*@
                    <b>@Html.DisplayFor(model => model.Usuario.nombreUsuario)</b>
                    <input type="hidden" asp-for="Usuario" class="form-control" value="@Model.Usuario" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsuarioId" class="control-label"></label>
                    @*<b>@Model.UsuarioId</b>*@
                    <b>@Html.DisplayFor(model => model.UsuarioId)</b>
                    <input type="hidden" asp-for="UsuarioId" class="form-control" value="@Model.UsuarioId" />
                    @*<select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>*@
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Responder" class="btn btn-primary" /> |
                    <a href="/Encuesta/Disponibles?UsuarioId=@Model.UsuarioId">Ver Encuestas disponibles</a>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
